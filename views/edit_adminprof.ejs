<%- include ('partials/header'); -%>

<div class="table-wrapper">
    <div><a class="buttonn buttonn4 float-right w3-button w3-xlarge w3-teal w3-hover-purple" href="/logoutt" title="logout">Log Out</a></div> 
    <div><a class="buttonn buttonn4 float-right w3-button w3-xlarge w3-teal w3-hover-purple" href="/add" title="Add a New Product">Add</a></div> 
    <div><a class="buttonn buttonn4 float-right w3-button w3-xlarge w3-teal w3-hover-purple" href="/profile" title="Profile">Profile</a></div> 
    <div><a class="buttonn buttonn4 float-right w3-button w3-xlarge w3-teal w3-hover-purple" href="/admin" title="ADHome">Admin Home</a></div> 
</div> 
<div class="container">
    <% if (admin) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="admin_id">ID :</label>
                    <input type="text" class="form-control" name="admin_id" id="admin_id" value="<%= admin.admin_id %>" required disabled title="ID cannot be edited.">
                </div>
                <div class="form-group col-md-4">
                    <label for="admin_name">Name :</label>
                    <input type="text" class="form-control" name="admin_name" id="admin_name" value="<%= admin.admin_name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="admin_address">Address :</label>
                    <input type="text" class="form-control" name="admin_address" id="admin_address" value="<%= admin.admin_address %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="admin_birth"><b>Birth Date :</b></label>
                    <input type="date" class="form-control" id="admin_birth" name="admin_birth" value="<%= admin.admin_birth %>"required>
                </div>
                <div class="form-group col-md-6">
                    <label for="admin_brand">Brand</label>
                    <select id="admin_brand" name="admin_brand" class="form-control" required>
                        <option selected><%= admin.admin_brand%></option>
                        <option value=3>Oppo</option>
                        <option value=1>Samsung</option>
                        <option value=2>Huawei</option>
                        <option value=4>Vivo</option>
                        <option value=5>Xiaomi</option>
                    </select>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="admin_password">Password:</label>
                    <input type="password" class="form-control" name="admin_password" id="admin_password" value="<%= admin.admin_password %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="admin_phone">Phone Number :</label>
                    <input type="text" class="form-control" name="admin_phone" id="admin_phone" value="<%= admin.admin_phone %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="admin_email">Email :</label>
                    <input type="text" class="form-control" name="admin_email" id="admin_email" value="<%= admin.admin_email %>" required>
                </div>
                <button type="submit" class="btn btn-success float-right /updadmin/<%= admin.admin_id %>">Update</button>
        </form>
    <% } else { %>
        <p class="text-center">Player Not Found. Go <a href="/add">here</a> to add players.</p>
    <% } %>
</div>
</body>
<script src='loader.js'></script>
</html>