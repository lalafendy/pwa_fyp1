<%- include ('partials/header'); -%>
<% if (success !=''){ %>
<div style="text-align: center" class="alert alert-danger">
    <strong><%= success %></strong>
</div>
    <% } %>
        <% if (product.length > 0) {%>
            <table>
                    <% product.forEach((prod, index) => { %>
                        <div id="box" class ="pro">
                            <span style="text-overflow: ellipsis;overflow: hidden;color:blue;font-size:18px;"><%= prod.product_name %> </span>
                            <a href="/view/<%= prod.product_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">CLICK</a>
                            <p style="color:blue;font-size:20px;" class="price"><%= prod.product_price %></p>

                        </div>
               
                    <% }) %>
                </table>
                
        <% } else { %>
            <p class="text-center">No product found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
</div> 
